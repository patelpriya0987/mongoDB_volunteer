    <style>
        /* Hide checkboxes and delete button initially */
        .selection, #deleteButton {
            display: none;
        }
    </style>        
</head>
<body>
    <div class="container text-center">
        <h2  class="text-center mt-5 borfer-b py-2 " >List of Volunteers</h2>
        <table border="1" class="table table-light">
            <thead>
                <tr>
                    <th class="selection">selection</th>
                    <th>id</th>
                    <th>name</th>
                    <th>email</th>
                    <th>phone</th>
                    <th>skill</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody>
                <% todos.forEach((t,index)=>{ %>
                    <tr>
                        <td class="selection"><input type="checkbox" name="selectedVolunteers" value="<%= t.id %>"></td>
                        <td><%= index+1 %></td>
                        <td><%= t.fname %></td>
                        <td><%= t.email %></td>
                        <td><%= t.number %></td>
                        <td><%= t.skill %></td>
                        <td>
                            <a href="/edit/<%= t.id %>" class="btn text-success">edit</a> ||
                            <a href="/delet/<%= t.id %>" class="btn text-danger">delete</a> ||
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <!-- <button type="submit" id="deleteButton" class="btn btn-danger mt-3">Delete Selected</button>
            <button id="toggleSelection" class="btn btn-outline-dark mt-3 mb-3"> Select Volunteers </button> -->

        <a href="/" class="btn btn-outline-dark">back to home</a>
    </div>
